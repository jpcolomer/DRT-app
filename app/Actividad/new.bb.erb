<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Actividad</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @actividad.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Nombre: </td>
                <td class="itemValue"><input type="text" name="actividad[nombre]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Responsable: </td>
                <td class="itemValue"><input type="text" name="actividad[responsable]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Avance: </td>
                <td class="itemValue"><input type="text" name="actividad[avance]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Fecha inicio: </td>
                <td class="itemValue"><input type="text" name="actividad[fecha_inicio]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Fecha fin: </td>
                <td class="itemValue"><input type="text" name="actividad[fecha_fin]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
