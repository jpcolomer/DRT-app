<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @actividad.object %>
    <h1>Edit <%= @actividad.nombre%></h1>
    <%= link_to "Delete", :action => :delete, :id => @actividad.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @actividad.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Nombre: </td>
              <td class="itemValue"><input type="text" name="actividad[nombre]" value="<%= @actividad.nombre %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Responsable: </td>
              <td class="itemValue"><input type="text" name="actividad[responsable]" value="<%= @actividad.responsable %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Avance: </td>
              <td class="itemValue"><input type="text" name="actividad[avance]" value="<%= @actividad.avance %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Fecha inicio: </td>
              <td class="itemValue"><input type="text" name="actividad[fecha_inicio]" value="<%= @actividad.fecha_inicio %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Fecha fin: </td>
              <td class="itemValue"><input type="text" name="actividad[fecha_fin]" value="<%= @actividad.fecha_fin %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
