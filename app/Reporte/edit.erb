<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @reporte.nombre %></h1>
    <a href="<%= url_for :action => :show, :id => @reporte.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @reporte.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @reporte.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="reporte[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="reporte[nombre]" name="reporte[nombre]" value="<%= @reporte.nombre %>" <%= placeholder( "Nombre" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="reporte[url]" class="fieldLabel">Url</label>
            <input type="text" id="reporte[url]" name="reporte[url]" value="<%= @reporte.url %>" <%= placeholder( "Url" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
