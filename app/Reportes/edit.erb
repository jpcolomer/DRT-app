<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @reportes.tipo %></h1>
    <a href="<%= url_for :action => :show, :id => @reportes.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @reportes.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @reportes.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="reportes[tipo]" class="fieldLabel">Tipo</label>
            <input type="text" id="reportes[tipo]" name="reportes[tipo]" value="<%= @reportes.tipo %>" <%= placeholder( "Tipo" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
