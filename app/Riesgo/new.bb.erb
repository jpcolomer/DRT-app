<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Riesgo</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @riesgo.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Nemo: </td>
                <td class="itemValue"><input type="text" name="riesgo[nemo]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Probabilidad: </td>
                <td class="itemValue"><input type="text" name="riesgo[probabilidad]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Impacto: </td>
                <td class="itemValue"><input type="text" name="riesgo[impacto]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Descripcion: </td>
                <td class="itemValue"><input type="text" name="riesgo[descripcion]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
