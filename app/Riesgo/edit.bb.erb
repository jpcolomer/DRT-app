<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @riesgo.object %>
    <h1>Edit <%= @riesgo.nemo%></h1>
    <%= link_to "Delete", :action => :delete, :id => @riesgo.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @riesgo.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Nemo: </td>
              <td class="itemValue"><input type="text" name="riesgo[nemo]" value="<%= @riesgo.nemo %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Probabilidad: </td>
              <td class="itemValue"><input type="text" name="riesgo[probabilidad]" value="<%= @riesgo.probabilidad %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Impacto: </td>
              <td class="itemValue"><input type="text" name="riesgo[impacto]" value="<%= @riesgo.impacto %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Descripcion: </td>
              <td class="itemValue"><input type="text" name="riesgo[descripcion]" value="<%= @riesgo.descripcion %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
