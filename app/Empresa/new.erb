<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @empresa.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @empresa.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="empresa[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="empresa[nombre]" name="empresa[nombre]" <%= placeholder("Nombre") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="empresa[responsable]" class="fieldLabel">Responsable</label>
            <input type="text" id="empresa[responsable]" name="empresa[responsable]" <%= placeholder("Responsable") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
