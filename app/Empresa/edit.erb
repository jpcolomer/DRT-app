<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @empresa.nombre %></h1>
    <a href="<%= url_for :action => :show, :id => @empresa.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @empresa.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @empresa.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="empresa[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="empresa[nombre]" name="empresa[nombre]" value="<%= @empresa.nombre %>" <%= placeholder( "Nombre" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="empresa[responsable]" class="fieldLabel">Responsable</label>
            <input type="text" id="empresa[responsable]" name="empresa[responsable]" value="<%= @empresa.responsable %>" <%= placeholder( "Responsable" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
