<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @plancontingencia.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @plancontingencia.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="plancontingencia[riesgo_id]" class="fieldLabel">Riesgo</label>
            <input type="text" id="plancontingencia[riesgo_id]" name="plancontingencia[riesgo_id]" value="<%= @riesgo.object %>" <%= placeholder("Riesgo") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="plancontingencia[descripcion]" class="fieldLabel">Descripcion</label>
            <input type="text" id="plancontingencia[descripcion]" name="plancontingencia[descripcion]" <%= placeholder("Descripcion") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
