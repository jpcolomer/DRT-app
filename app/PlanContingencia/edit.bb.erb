<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @plancontingencia.object %>
    <h1>Edit <%= @plancontingencia.riesgo_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @plancontingencia.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @plancontingencia.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Riesgo: </td>
              <td class="itemValue"><input type="text" name="plancontingencia[riesgo_id]" value="<%= @plancontingencia.riesgo_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Descripcion: </td>
              <td class="itemValue"><input type="text" name="plancontingencia[descripcion]" value="<%= @plancontingencia.descripcion %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
