<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @plancontingencia.riesgo_id %></h1>
    <a href="<%= url_for :action => :show, :id => @plancontingencia.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @plancontingencia.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @plancontingencia.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="plancontingencia[riesgo_id]" class="fieldLabel">Riesgo</label>
            <input type="text" id="plancontingencia[riesgo_id]" name="plancontingencia[riesgo_id]" value="<%= @plancontingencia.riesgo_id %>" <%= placeholder( "Riesgo" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="plancontingencia[descripcion]" class="fieldLabel">Descripcion</label>
            <input type="text" id="plancontingencia[descripcion]" name="plancontingencia[descripcion]" value="<%= @plancontingencia.descripcion %>" <%= placeholder( "Descripcion" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
