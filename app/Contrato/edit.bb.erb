<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @contrato.object %>
    <h1>Edit <%= @contrato.empresa_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @contrato.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contrato.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Empresa: </td>
              <td class="itemValue"><input type="text" name="contrato[empresa_id]" value="<%= @contrato.empresa_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Area: </td>
              <td class="itemValue"><input type="text" name="contrato[area_id]" value="<%= @contrato.area_id %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
