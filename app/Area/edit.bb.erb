<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @area.object %>
    <h1>Edit <%= @area.nombre%></h1>
    <%= link_to "Delete", :action => :delete, :id => @area.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Nombre: </td>
              <td class="itemValue"><input type="text" name="area[nombre]" value="<%= @area.nombre %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Compromiso reduccion: </td>
              <td class="itemValue"><input type="text" name="area[compromiso_reduccion]" value="<%= @area.compromiso_reduccion %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Compromiso iniciativas: </td>
              <td class="itemValue"><input type="text" name="area[compromiso_iniciativas]" value="<%= @area.compromiso_iniciativas %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
