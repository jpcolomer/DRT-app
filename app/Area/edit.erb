<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @area.nombre %></h1>
    <a href="<%= url_for :action => :show, :id => @area.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @area.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="area[nombre]" class="fieldLabel">Nombre</label>
            <input type="text" id="area[nombre]" name="area[nombre]" value="<%= @area.nombre %>" <%= placeholder( "Nombre" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="area[compromiso_reduccion]" class="fieldLabel">Compromiso reduccion</label>
            <input type="text" id="area[compromiso_reduccion]" name="area[compromiso_reduccion]" value="<%= @area.compromiso_reduccion %>" <%= placeholder( "Compromiso reduccion" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="area[compromiso_iniciativas]" class="fieldLabel">Compromiso iniciativas</label>
            <input type="text" id="area[compromiso_iniciativas]" name="area[compromiso_iniciativas]" value="<%= @area.compromiso_iniciativas %>" <%= placeholder( "Compromiso iniciativas" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
