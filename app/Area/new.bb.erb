<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Area</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Nombre: </td>
                <td class="itemValue"><input type="text" name="area[nombre]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Compromiso reduccion: </td>
                <td class="itemValue"><input type="text" name="area[compromiso_reduccion]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Compromiso iniciativas: </td>
                <td class="itemValue"><input type="text" name="area[compromiso_iniciativas]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
