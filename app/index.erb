<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>DRT</h1>
    <% if SyncEngine::logged_in > 0 %>
    <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
      Sync
    </a>
    <a href="<%= url_for :controller => :Settings, :action => :logout %>" class="ui-btn-right" data-icon="star">
	    Logout
	  </a>
    <% else %>
        <a href="<%= url_for :controller => :Settings, :action => :login %>" class="ui-btn-right" data-icon="star">Login</a>
    <% end %>
  </div>

  <div data-role="content">
    <ul data-role="listview" class="main-list">
      <li><a href="<%= url_for :controller => :Avance, :action => :pre_index %>">Avances</a></li>
      <li><a href="<%= url_for :controller => :Riesgo, :action => :pre_index %>">Riesgos</a></li>
      <li><a href="<%= url_for :controller => :Actividad, :action => :pre_index %>">Actividades</a></li>
      <li><a href="<%= url_for :controller => :Reporte, :action => :pre_index %>">Reportes</a></li>
    </ul>
  </div>

</div>
