<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @avance.aux %></h1>
    <a href="<%= url_for :action => :show, :id => @avance.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @avance.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @avance.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="avance[aux]" class="fieldLabel">Aux</label>
            <input type="text" id="avance[aux]" name="avance[aux]" value="<%= @avance.aux %>" <%= placeholder( "Aux" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
